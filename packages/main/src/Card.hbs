<div
	class="{{classes.root}}"
	role="region"
	aria-label="{{_getAriaLabel}}"
	part="root">
	{{#if _hasHeader}}
		<div class="ui5-card-header-root">
			<slot name="header"></slot>
		</div>
	{{/if}}
	{{#if showBusy}}
		<ui5-busy-indicator active></ui5-busy-indicator>
	{{/if}}
	<div role="group" aria-label="{{_ariaCardContentLabel}}" part="content">
		<slot></slot>
	</div>
</div>
